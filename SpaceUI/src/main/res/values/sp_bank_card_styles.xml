<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SPBankCardView.Base" parent="SPBaseView">
        <item name="roundedCorners">@dimen/dimen_p_8</item>
        <item name="shadowOffsetX">0dp</item>
        <item name="shadowOffsetY">@dimen/dimen_p_10</item>
        <item name="shadowAlpha">15%</item>
        <item name="shadowRadius">@dimen/dimen_p_25</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="cardStatusTextAppearance">@style/h800_medium_bank_card_status</item>
        <item name="cardAmountTextAppearance">@style/h700_bold_caps_bank_card_amount</item>
        <item name="cardBankNameTextAppearance">@style/h700_bold_card_bank_name</item>
        <item name="cardTypeTextAppearance">@style/h900_medium_card_bank_type</item>
        <item name="cardCreditTitleTextAppearance">@style/h900_medium_card_bank_credit_title</item>
        <item name="cardBalanceTextAppearance">@style/h900_medium_bank_card_balance</item>
        <item name="cardAccountNumberTextAppearance">@style/h400_medium_bank_card_account_number</item>
    </style>

    <style name="SPBankCardView.EmptySmall.Base" parent="SPBaseView">
        <item name="roundedCorners">@dimen/dimen_p_4</item>
        <item name="shadowOffsetX">0dp</item>
        <item name="shadowOffsetY">0dp</item>
        <item name="shadowRadius">0dp</item>
    </style>

    <style name="SPBankCardView.Chip.Base" parent="SPBankCardView.EmptySmall.Base">
        <item name="backgroundColor">?attr/greyscale_gray_5</item>
    </style>

    <style name="SPBankCardView.Chip" parent="SPBankCardView.Chip.Base">
        <item name="roundedCorners">@dimen/sp_bank_round_radius_big</item>
    </style>

    <style name="SPBankCardView.Chip.Small" parent="SPBankCardView.Chip.Base">
        <item name="roundedCorners">@dimen/sp_bank_round_radius_small</item>
    </style>

    <style name="SPBankCardView.Chip.Icon.Small" parent="">
        <item name="cardSize">small</item>
    </style>

    <style name="SPBankCardView.Chip.Icon.Dark" parent="">
        <item name="chipIconAppearance">dark</item>
    </style>

    <style name="SPBankCardView.Chip.AddIcon" parent="">
        <item name="chipIcon">@drawable/ic_plus_24_regular</item>
    </style>

    <style name="SPBankCardView.Chip.AddIcon.Dark" parent="">
        <item name="chipIcon">@drawable/ic_plus_24_regular</item>
        <item name="chipIconAppearance">dark</item>
    </style>

    <style name="SPBankCardView.Chip.AddIcon.Small" parent="">
        <item name="chipIcon">@drawable/ic_plus_24_regular</item>
        <item name="cardSize">small</item>
    </style>

    <style name="SecondaryChip" parent="SPBankCardView.Chip.Small" />

    <style name="SPChip.PlaceHolder" parent="SPBankCardView.EmptySmall.Base">
        <item name="backgroundColor">?attr/static_white</item>
    </style>

    <style name="SPChip.PlaceHolder.Small" parent="SPChip.PlaceHolder">
        <item name="roundedCorners">@dimen/sp_bank_logo_placeholder_radius_small</item>
    </style>

    <style name="SPChip.PlaceHolder.XSmall" parent="SPChip.PlaceHolder">
        <item name="roundedCorners">@dimen/sp_bank_logo_placeholder_radius_xsmall</item>
    </style>

    <style name="SPChip.PlaceHolder.Medium" parent="SPChip.PlaceHolder">
        <item name="roundedCorners">@dimen/sp_bank_logo_placeholder_radius_medium</item>
    </style>

    <style name="SPChip.PlaceHolder.XMedium" parent="SPChip.PlaceHolder">
        <item name="roundedCorners">@dimen/sp_bank_logo_placeholder_radius_xmedium</item>
    </style>

    <style name="SPChip.PlaceHolder.Big" parent="SPChip.PlaceHolder">
        <item name="roundedCorners">@dimen/sp_bank_logo_placeholder_radius_big</item>
    </style>

    <style name="SPBankCardView.Favorite" parent="SPBankCardView.EmptySmall.Base">
        <item name="backgroundColor">?attr/static_white</item>
        <item name="isCircle">true</item>
        <item name="shadowOffsetX">@dimen/sp_favorite_shadow</item>
        <item name="shadowOffsetY">@dimen/sp_favorite_shadow</item>
        <item name="shadowRadius">@dimen/sp_favorite_shadow</item>
        <item name="shadowAlpha">8%</item>
        <item name="shadowColor">?attr/static_black</item>
    </style>

    <style name="SPBankCardView.CreditCard.Small" parent="">
        <item name="cardSize">small</item>
    </style>

    <style name="SPNewCreditCard.Title" parent="">
        <item name="android:textAppearance">@style/h700_new_credit_card_title</item>
    </style>
</resources>