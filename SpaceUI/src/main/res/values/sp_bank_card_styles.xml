<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SPBankCardView.Base" parent="SPBaseView">
        <item name="roundedCorners">@dimen/dimen_p_8</item>
        <item name="shadowOffsetX">0dp</item>
        <item name="shadowOffsetY">@dimen/dimen_p_10</item>
        <item name="shadowAlpha">15%</item>
        <item name="shadowRadius">@dimen/dimen_p_25</item>
        <item name="backgroundColor">?attr/static_white</item>
        <item name="cardStatusTextAppearance">@style/h800_medium_bank_card_status</item>
        <item name="cardAmountTextAppearance">@style/h700_bold_caps_bank_card_amount</item>
        <item name="cardBankNameTextAppearance">@style/h700_bold_card_bank_name</item>
        <item name="cardTypeTextAppearance">@style/h900_medium_card_bank_type</item>
        <item name="cardCreditTitleTextAppearance">@style/h900_medium_card_bank_credit_title</item>
        <item name="cardBalanceTextAppearance">@style/h900_medium_bank_card_balance</item>
        <item name="cardAccountNumberTextAppearance">@style/h400_medium_bank_card_account_number</item>
    </style>

    <style name="SPBankCardView.EmptySmall.Base" parent="SPBaseView">
        <item name="roundedCorners">@dimen/dimen_p_4</item>
        <item name="shadowOffsetX">0dp</item>
        <item name="shadowOffsetY">0dp</item>
        <item name="shadowRadius">0dp</item>
    </style>

    <style name="SPBankCardView.AddBankCardButton.Base" parent="SPBankCardView.EmptySmall.Base">
        <item name="backgroundColor">?attr/greyscale_gray_5</item>
    </style>

    <style name="SPBankCardView.AddBankCardButton" parent="SPBankCardView.AddBankCardButton.Base">
        <item name="roundedCorners">@dimen/dimen_p_6</item>
    </style>

    <style name="SPBankCardView.AddBankCardButton.Small" parent="SPBankCardView.AddBankCardButton.Base">
        <item name="roundedCorners">@dimen/dimen_p_4</item>
    </style>
</resources>