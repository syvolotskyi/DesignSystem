<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SPBankCardView" parent="SPBaseView">
        <item name="roundedCorners">@dimen/dimen_p_8</item>
        <item name="shadowOffsetX">0dp</item>
        <item name="shadowOffsetY">@dimen/dimen_p_10</item>
        <item name="shadowAlpha">15%</item>
        <item name="shadowRadius">@dimen/dimen_p_25</item>
        <item name="backgroundColor">?attr/static_white</item>
    </style>

    <style name="SPBankCardStatusLabel" parent="@style/h800_medium">
        <item name="android:textColor">?attr/static_white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SPBankCardAmount" parent="@style/h700_bold_caps">
        <item name="android:textColor">?attr/accent_green</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SPCardBankName" parent="@style/h700_bold">
        <item name="android:textColor">?attr/greyscale_gray_1</item>
        <item name="android:maxLines">2</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SPCardBankType" parent="@style/h900_medium">
        <item name="android:textColor">?attr/greyscale_gray_1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SPCardBankCreditTitle" parent="@style/h900_medium">
        <item name="android:textColor">?attr/static_white</item>
    </style>

    <style name="SPBankCardBalance" parent="@style/h900_medium">
        <item name="android:textColor">?attr/greyscale_gray_1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SPBankCardAccountNumber" parent="@style/h400_medium">
        <item name="android:textSize">@dimen/dimen_sp_12</item>
        <item name="android:textColor">?attr/static_white</item>
    </style>
</resources>