<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SPPinEntryEditText">
        <attr name="android:textColor" format="color|reference" />
        <attr name="disableCopyPaste" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SPPinEditText">
        <attr name="android:text" format="string|reference" />
        <attr name="pinLabelText"  />
        <attr name="pinDescriptionText" format="string|reference" />
        <attr name="android:enabled" format="boolean" />
        <attr name="android:textAppearance" />
        <attr name="descriptionTextAppearance" />
        <attr name="android:maxLength" format="integer" />
    </declare-styleable>

    <declare-styleable name="SPPasswordView">
        <attr name="android:text" format="string|reference" />
        <attr name="android:maxLength" format="integer" />
        <attr name="pinLabelText" />
    </declare-styleable>
</resources>