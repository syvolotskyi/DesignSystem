<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="sp_button_view_style">
        <attr name="android:textAppearance" />
        <attr name="distractiveTextAppearance" />
        <attr name="distractiveBackground" />
        <attr name="distractiveColor" format="color|reference" />
        <attr name="buttonHeight" />
        <attr name="btnIconPadding" format="reference" />
    </declare-styleable>

    <declare-styleable name="SPButton">
        <attr name="android:text" format="string|reference" />
        <attr name="directionIcon" />
        <attr name="android:src" format="reference" />
    </declare-styleable>

    <declare-styleable name="SPButtonVertical">
        <attr name="style" />
        <attr name="android:text" format="string|reference" />
        <attr name="android:src" format="reference" />
        <attr name="borderColor" />
        <attr name="android:enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SPButtonIconic">
        <attr name="style" />
        <attr name="borderColor" />
        <attr name="iconBackgroundColor" format="reference" />
        <attr name="iconColor" format="reference" />
        <attr name="distractiveBorderColor" format="reference"/>
        <attr name="distractiveIconColor" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SPButtonHorizontal">
        <attr name="style" />
        <attr name="android:text" format="string|reference" />
        <attr name="android:src" format="reference" />
    </declare-styleable>

</resources>