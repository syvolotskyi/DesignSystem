<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="sp_button">
        <attr name="android:text" format="string|reference" />
    </declare-styleable>
    <declare-styleable name="sp_button_view_style">
        <attr name="directionArrow" />
        <attr name="android:textAppearance"/>
        <attr name="btnIconPadding" />
    </declare-styleable>

    <declare-styleable name="sp_button_vertical">
        <attr name="android:text" format="string|reference" />
        <attr name="android:src" format="reference" />
        <attr name="android:enabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="sp_button_horizontal">
        <attr name="android:text" format="string|reference" />
        <attr name="android:src" format="reference" />
    </declare-styleable>

</resources>