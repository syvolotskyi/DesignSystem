<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SPButton.BaseView" parent="shadow_400_primary">
        <item name="roundedCorners">@dimen/dimen_p_10</item>
        <item name="directionArrow">none</item>
    </style>

    <style name="SPButton.Secondary" parent="SPButton.BaseView">
        <item name="backgroundColor">?attr/background_tertiary</item>
        <item name="android:textAppearance">@style/h600_bold_caps_brand_primary</item>
    </style>

    <style name="SPButton.SecondaryWithLeftArrow" parent="SPButton.Secondary">
        <item name="directionArrow">left</item>
    </style>

    <style name="SPButton.SecondaryWithRightArrow" parent="SPButton.Secondary">
        <item name="directionArrow">right</item>
    </style>

    <style name="SPButton.Primary" parent="SPButton.BaseView">
        <item name="backgroundColor">?attr/brand_primary</item>
        <item name="android:textAppearance">@style/h600_bold_caps_primary_white</item>
    </style>

    <style name="SPButton.PrimaryWithLeftArrow" parent="SPButton.Primary">
        <item name="directionArrow">left</item>
    </style>

    <style name="SPButton.PrimaryWithRightArrow" parent="SPButton.Primary">
        <item name="directionArrow">right</item>
    </style>



    <style name="SPButton.DarkView" parent="SPButton.BaseView">
        <item name="backgroundColor">?attr/static_black</item>
        <item name="android:textAppearance">@style/h600_bold_caps_primary_white</item>
    </style>

    <style name="SPButton.DarkWithLeftArrow" parent="SPButton.DarkView">
        <item name="directionArrow">left</item>
    </style>

    <style name="SPButton.DarkWithRightArrow" parent="SPButton.DarkView">
        <item name="directionArrow">right</item>
    </style>

    <style name="SPButton.TransparentView" parent="SPButton.BaseView">
        <item name="shadowOffsetX">0dp</item>
        <item name="shadowOffsetY">0dp</item>
        <item name="shadowAlpha">100%</item>
        <item name="backgroundColor">@color/transparent</item>
        <item name="shadowRadius">0dp</item>
        <item name="android:textAppearance">@style/h600_bold_caps_brand_primary</item>
    </style>

    <style name="SPButton.TransparentWithLeftArrow" parent="SPButton.TransparentView">
        <item name="directionArrow">left</item>
    </style>

    <style name="SPButton.TransparentWithRightArrow" parent="SPButton.TransparentView">
        <item name="directionArrow">right</item>
    </style>

</resources>