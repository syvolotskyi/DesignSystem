<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SPButtonBaseView" parent="SPBaseView">
        <item name="sp_roundedCorners">@dimen/dimen_p_10</item>
        <item name="sp_shadowOffsetX">0dp</item>
        <item name="sp_shadowOffsetY">@dimen/dimen_p_4</item>
        <item name="sp_shadowAlpha">10%</item>
        <item name="sp_shadowRadius">@dimen/dimen_p_10</item>
        <item name="sp_directionArrow">none</item>
    </style>

    <style name="SPButtonVerticalBubbleView" parent="SPBaseView">
        <item name="sp_shadowOffsetX">0dp</item>
        <item name="sp_shadowOffsetY">@dimen/dimen_p_8</item>
        <item name="sp_shadowAlpha">15%</item>
        <item name="sp_backgroundColor">?attr/colorAccent</item>
        <item name="sp_isCircle">true</item>
        <item name="android:textAppearance">@style/h700_bold_caps_secondary</item>
    </style>

    <style name="SPButtonWhiteView" parent="SPButtonBaseView">
        <item name="android:textAppearance">@style/h700_bold_caps_brand_primary</item>
    </style>

    <style name="SPButtonWhiteWithLeftArrow" parent="SPButtonWhiteView">
        <item name="sp_directionArrow">left</item>
    </style>

    <style name="SPButtonWhiteWithRightArrow" parent="SPButtonWhiteView">
        <item name="sp_directionArrow">right</item>
    </style>

    <style name="SPButtonAccentView" parent="SPButtonBaseView">
        <item name="sp_backgroundColor">?attr/colorAccent</item>
        <item name="android:textAppearance">@style/h700_bold_caps_primary_white</item>
    </style>

    <style name="SPButtonAccentWithLeftArrow" parent="SPButtonAccentView">
        <item name="sp_directionArrow">left</item>
    </style>

    <style name="SPButtonAccentWithRightArrow" parent="SPButtonAccentView">
        <item name="sp_directionArrow">right</item>
    </style>

    <style name="SPButtonDarkView" parent="SPButtonBaseView">
        <item name="sp_backgroundColor">?attr/static_black</item>
        <item name="android:textAppearance">@style/h700_bold_caps_primary_white</item>
    </style>

    <style name="SPButtonDarkWithLeftArrow" parent="SPButtonDarkView">
        <item name="sp_directionArrow">left</item>
    </style>

    <style name="SPButtonDarkWithRightArrow" parent="SPButtonDarkView">
        <item name="sp_directionArrow">right</item>
    </style>

    <style name="SPButtonTransparentView" parent="SPButtonBaseView">
        <item name="sp_shadowOffsetX">0dp</item>
        <item name="sp_shadowOffsetY">0dp</item>
        <item name="sp_shadowAlpha">100%</item>
        <item name="sp_backgroundColor">@color/transparent</item>
        <item name="sp_shadowRadius">0dp</item>
        <item name="android:textAppearance">@style/h700_bold_caps_brand_primary</item>
    </style>

    <style name="SPButtonTransparentWithLeftArrow" parent="SPButtonTransparentView">
        <item name="sp_directionArrow">left</item>
    </style>

    <style name="SPButtonTransparentWithRightArrow" parent="SPButtonTransparentView">
        <item name="sp_directionArrow">right</item>
    </style>

    <style name="SPButtonBaseVertical" parent="SPBaseView">
        <item name="android:textColor">@color/titleLabelTextColor</item>
        <item name="android:textSize">@dimen/dimen_sp_14</item>
        <item name="android:fontFamily">@font/myriad_geo_medium</item>
        <item name="sp_shadowAlpha">100%</item>
        <item name="sp_backgroundColor">@color/transparent</item>
        <item name="sp_shadowRadius">0dp</item>
        <item name="sp_iconPadding">normal</item>
        <item name="android:textAppearance">@style/h700_bold_caps_secondary</item>
    </style>

    <style name="SPButtonLargeVertical" parent="SPButtonBaseVertical">
        <item name="sp_iconPadding">large</item>
    </style>

    <style name="SPButtonBaseHorizontal" parent="SPBaseView">
        <item name="android:textColor">@color/titleLabelTextColor</item>
        <item name="android:textSize">@dimen/dimen_sp_14</item>
        <item name="android:fontFamily">@font/myriad_geo_bold</item>
        <item name="sp_shadowAlpha">25%</item>
        <item name="sp_shadowOffsetY">@dimen/dimen_p_4</item>
        <item name="sp_backgroundColor">@color/white</item>
        <item name="sp_shadowRadius">@dimen/dimen_p_10</item>
        <item name="sp_roundedCorners">@dimen/dimen_p_10</item>
        <item name="android:textAppearance">@style/h700_bold_secondary</item>
    </style>

    <style name="SPButtonView" parent="SPButtonBaseView">
        <item name="android:fontFamily">@font/myriad_geo_medium</item>
    </style>

    <style name="SPButtonTransparent" parent="SPButtonView">
        <item name="sp_shadowOffsetX">0dp</item>
        <item name="sp_shadowOffsetY">0dp</item>
        <item name="sp_shadowAlpha">100%</item>
        <item name="sp_backgroundColor">@color/transparent</item>
        <item name="sp_shadowRadius">0dp</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="SPButtonRemoveTransparentView" parent="SPButtonTransparent">
        <item name="android:textColor">?attr/accent_magenta</item>
    </style>

    <style name="SPButtonCancelTransparentView" parent="SPButtonTransparent">
        <item name="android:textColor">?attr/greyscale_gray_1</item>
    </style>

</resources>