<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SPButton.BaseView" parent="SPBaseView">
        <item name="roundedCorners">@dimen/dimen_p_10</item>
        <item name="shadowOffsetX">0dp</item>
        <item name="shadowOffsetY">@dimen/dimen_p_4</item>
        <item name="shadowAlpha">10%</item>
        <item name="shadowRadius">@dimen/dimen_p_10</item>
        <item name="directionArrow">none</item>
    </style>

    <style name="SPButton.WhiteView" parent="SPButton.BaseView">
        <item name="android:textAppearance">@style/h700_bold_caps_brand_primary</item>
    </style>

    <style name="SPButton.WhiteWithLeftArrow" parent="SPButton.WhiteView">
        <item name="directionArrow">left</item>
    </style>

    <style name="SPButton.WhiteWithRightArrow" parent="SPButton.WhiteView">
        <item name="directionArrow">right</item>
    </style>

    <style name="SPButton.AccentView" parent="SPButton.BaseView">
        <item name="backgroundColor">?attr/colorAccent</item>
        <item name="android:textAppearance">@style/h700_bold_caps_primary_white</item>
    </style>

    <style name="SPButton.AccentWithLeftArrow" parent="SPButton.AccentView">
        <item name="directionArrow">left</item>
    </style>

    <style name="SPButton.AccentWithRightArrow" parent="SPButton.AccentView">
        <item name="directionArrow">right</item>
    </style>

    <style name="SPButton.DarkView" parent="SPButton.BaseView">
        <item name="backgroundColor">?attr/static_black</item>
        <item name="android:textAppearance">@style/h700_bold_caps_primary_white</item>
    </style>

    <style name="SPButton.DarkWithLeftArrow" parent="SPButton.DarkView">
        <item name="directionArrow">left</item>
    </style>

    <style name="SPButton.DarkWithRightArrow" parent="SPButton.DarkView">
        <item name="directionArrow">right</item>
    </style>

    <style name="SPButton.TransparentView" parent="SPButton.BaseView">
        <item name="shadowOffsetX">0dp</item>
        <item name="shadowOffsetY">0dp</item>
        <item name="shadowAlpha">100%</item>
        <item name="backgroundColor">@color/transparent</item>
        <item name="shadowRadius">0dp</item>
        <item name="android:textAppearance">@style/h700_bold_caps_brand_primary</item>
    </style>

    <style name="SPButton.TransparentWithLeftArrow" parent="SPButton.TransparentView">
        <item name="directionArrow">left</item>
    </style>

    <style name="SPButton.TransparentWithRightArrow" parent="SPButton.TransparentView">
        <item name="directionArrow">right</item>
    </style>

</resources>