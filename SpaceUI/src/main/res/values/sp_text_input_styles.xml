<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SPTextFieldBased" parent="@style/Typography.Base.MyriadGEO.Bold">
        <item name="hintTextAppearance">@style/label_tertiary</item>
        <item name="android:textColor">@color/appPrimaryColor</item>
    </style>

    <style name="SPEditTextMasked" parent="SPTextFieldBased">
        <item name="android:hint">XXXXXXXXX</item>
