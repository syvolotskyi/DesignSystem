<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SPTextFieldBased">
        <item name="android:textAppearance">@style/h700_bold_caps_text_field</item>

        <item name="descriptionTextAppearance">@style/h800_medium_label_tertiary</item>
        <item name="labelTextAppearance">@style/h700_medium_caps_label_secondary</item>
    </style>

    <style name="SPEditText.Masked" parent="SPTextFieldBased">
        <item name="android:textAppearance">@style/h600_bold_text_field_phone</item>
        <item name="android:hint">XXXXXXXXX</item>
    </style>

    <style name="SPTextField.Input" parent="SPTextFieldBased">
        <item name="canRemove">false</item>
    </style>

    <style name="SPTextField.InputRemovable" parent="SPTextField.Input">
        <item name="canRemove">true</item>
    </style>

    <style name="h700_bold_caps_text_field" parent="@style/h700_bold_caps">
        <item name="android:textColor">@color/selector_text_field_text_color</item>
        <item name="android:textColorHint">@color/selector_text_field_hint_color</item>
    </style>

    <style name="h600_bold_text_field_phone" parent="h600_bold">
        <item name="android:textColorHint">@color/selector_text_field_hint_color</item>
        <item name="android:textColor">@color/selector_text_field_text_color</item>
    </style>
</resources>