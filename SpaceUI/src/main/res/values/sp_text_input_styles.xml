<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SPTextField.Base" parent="">
        <item name="android:textAppearance">@style/h700_bold_caps_text_field</item>
        <item name="descriptionTextAppearance">@style/h800_medium_label_tertiary</item>
        <item name="labelTextAppearance">@style/h700_medium_caps_label_secondary</item>
        <item name="canRemove">false</item>
    </style>

    <style name="SPEditText.Masked" parent="SPTextField.Base">
        <item name="android:textAppearance">@style/h600_bold_text_field_phone</item>
        <item name="android:hint">XXXXXXXXX</item>
    </style>

    <style name="SPTextField.Input" parent="SPTextField.Base">
        <item name="canRemove">false</item>
    </style>

    <style name="SPTextField.Search" parent="SPTextField.Base">
        <item name="canRemove">true</item>
        <item name="drawableLeft">@drawable/ic_search_24_regular</item>
    </style>

    <style name="SPTextField.Dropdown" parent="SPTextField.Base">
        <item name="android:textAppearance">@style/h700_bold_caps_text_field</item>
        <item name="isIconVisible">false</item>
    </style>

    <style name="SPTextField.DropdownWithIcon" parent="SPTextField.Dropdown">
        <item name="isIconVisible">true</item>
    </style>

    <style name="SPTextField.InputRemovable" parent="SPTextField.Input">
        <item name="canRemove">true</item>
    </style>

</resources>