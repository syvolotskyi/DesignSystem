    <style name="SPTextFieldInput" parent="SPTextFieldBased">
        <item name="sp_canRemove">false</item>
    </style>

    <style name="SPTextFieldInput.Removable" parent="SPTextFieldInput">
        <item name="sp_canRemove">true</item>
    </style>
</resources>