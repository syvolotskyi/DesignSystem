        <item name="fill_tertiary">@color/light_fill_tertiary</item>
        <item name="fill_quaternary">@color/light_fill_quaternary</item>
    </style>


    //show case app
    <style name="CheckboxStyle">
        <item name="buttonTint">?attr/themeCheckBoxButtonTint</item>
        <item name="android:textColor">?attr/themeTextColor</item>  // for unchecked
    </style>
</resources>