    <style name="ThemeLight" parent="BaseTheme">
        <item name="colorPrimary">@color/light_background_primary</item>
        <item name="colorPrimaryDark">@color/light_brand_primary</item>
        <item name="colorAccent">@color/light_brand_primary</item>
        <item name="android:windowBackground">@color/light_background_primary</item>

        //brand
        <item name="brand_primary">@color/light_brand_primary</item>
        <item name="brand_secondary">@color/light_brand_secondary</item>

        //accent
        <item name="accent_red">@color/light_accent_red</item>
        <item name="accent_orange">@color/light_accent_orange</item>
