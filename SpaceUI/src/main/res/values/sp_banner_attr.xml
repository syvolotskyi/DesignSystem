<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SPBannerBaseView">

        <attr name="sp_bannerTitle" format="string|reference" />
        <attr name="sp_bannerTitle_isVisible" format="boolean" />
        <attr name="sp_bannerTitle_textAppearance" format="reference" />

        <attr name="sp_bannerSubTitle" format="string|reference" />
        <attr name="sp_bannerSubTitle_isVisible" format="boolean" />
        <attr name="sp_bannerSubtitle_textAppearance" format="reference" />

        <attr name="sp_bannerDescription" format="string|reference" />
        <attr name="sp_bannerDescription_isVisible" format="boolean" />
        <attr name="sp_bannerDescription_textAppearance" format="reference" />

    </declare-styleable>

    <declare-styleable name="SPBannerIllustration" parent="SPBannerBaseView">
        <attr name="sp_bannerImage" format="reference" />
    </declare-styleable>


    <declare-styleable name="SPBannerStatus" parent="SPBannerBaseView">
        <attr name="sp_bannerStatusState" format="enum">
            <enum name="Success" value="0" />
            <enum name="Error" value="1" />
            <enum name="Pending" value="2" />
            <enum name="Info" value="3" />
        </attr>
    </declare-styleable>

</resources>