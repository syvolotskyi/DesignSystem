<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SPButton.Vertical.BubbleView" parent="SPBaseView">
        <item name="shadowOffsetX">0dp</item>
        <item name="shadowOffsetY">@dimen/dimen_p_8</item>
        <item name="shadowAlpha">15%</item>
        <item name="backgroundColor">?attr/colorAccent</item>
        <item name="isCircle">true</item>
        <item name="android:textAppearance">@style/h700_bold_caps_secondary</item>
    </style>

    <style name="SPButton.VerticalBase" parent="SPBaseView">
        <item name="android:textColor">@color/titleLabelTextColor</item>
        <item name="android:textSize">@dimen/dimen_sp_14</item>
        <item name="android:fontFamily">@font/myriad_geo_medium</item>
        <item name="shadowAlpha">100%</item>
        <item name="backgroundColor">@color/transparent</item>
        <item name="shadowRadius">0dp</item>
        <item name="btnIconPadding">normal</item>
        <item name="android:textAppearance">@style/h700_bold_caps_secondary</item>
    </style>

    <style name="SPButton.VerticalLarge" parent="SPButton.VerticalBase">
        <item name="btnIconPadding">large</item>
    </style>

</resources>