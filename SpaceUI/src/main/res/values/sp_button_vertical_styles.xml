<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SPButton.Vertical.BubbleView" parent="shadow_300_primary">
        <item name="backgroundColor">?attr/colorAccent</item>
        <item name="isCircle">true</item>
    </style>

    <style name="SPButton.Vertical_Size40" parent="SPBaseView">
        <item name="android:textColor">@color/titleLabelTextColor</item>
        <item name="android:textSize">@dimen/dimen_sp_14</item>
        <item name="android:fontFamily">@font/myriad_geo_medium</item>
        <item name="shadowAlpha">100%</item>
        <item name="backgroundColor">@color/transparent</item>
        <item name="shadowRadius">0dp</item>
        <item name="distractiveColor">?attr/accent_magenta</item>
        <item name="buttonHeight">@dimen/dimen_p_16</item>
        <item name="btnIconPadding">@dimen/dimen_p_12</item>
        <item name="android:textAppearance">@style/h700_bold_caps_secondary</item>
    </style>

    <style name="SPButton.Vertical_Size48" parent="SPButton.Vertical_Size40">
        <item name="btnIconPadding">@dimen/dimen_p_16</item>
        <item name="buttonHeight">@dimen/dimen_p_16</item>
    </style>

</resources>