<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SPButton.Iconic.BubbleView" parent="shadow_300_primary">
        <item name="shadowOffsetX">0dp</item>
        <item name="shadowOffsetY">@dimen/dimen_p_8</item>
        <item name="shadowAlpha">15%</item>
        <item name="backgroundColor">?attr/colorAccent</item>
        <item name="isCircle">true</item>
        <item name="android:textAppearance">@style/h700_bold_caps_secondary</item>
    </style>

    <style name="SPButton.Iconic.Size24" parent="SPBaseView">
        <item name="shadowAlpha">100%</item>
        <item name="btnIconPadding">@dimen/dimen_p_6</item>
        <item name="buttonHeight">@dimen/dimen_p_12</item>
        <item name="shadowRadius">0dp</item>
        <item name="android:textAppearance">@style/h700_bold_caps_secondary</item>
    </style>

    <style name="SPButton.Iconic.Secondary.Size24" parent="SPButton.Iconic.Size24">
        <item name="backgroundColor">?attr/colorSecondary</item>
    </style>

    <style name="SPButton.Iconic.Size32" parent="SPButton.Iconic.Size24">
        <item name="btnIconPadding">@dimen/dimen_p_10</item>
        <item name="buttonHeight">@dimen/dimen_p_12</item>
    </style>

    <style name="SPButton.Iconic.Size40" parent="SPButton.Iconic.Size24">
        <item name="buttonHeight">@dimen/dimen_p_16</item>
        <item name="btnIconPadding">@dimen/dimen_p_12</item>
    </style>

    <style name="SPButton.Iconic.Size48" parent="SPButton.Iconic.Size24">
        <item name="btnIconPadding">@dimen/dimen_p_16</item>
        <item name="buttonHeight">@dimen/dimen_p_16</item>
    </style>

</resources>