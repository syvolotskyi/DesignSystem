<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SPPinEntryEditText">
        <item name="android:digits">1234567890</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="SPPinEntryPassword" parent="SPPinEntryEditText">
        <item name="sp_pinType">password</item>
        <item name="sp_disableCopyPaste">true</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="SPPinEntryOTPCode" parent="SPPinEntryEditText">
        <item name="android:background">@drawable/sp_otp_code_shape_background</item>
        <item name="paddingStart">@dimen/dimen_p_24</item>
        <item name="paddingEnd">@dimen/dimen_p_24</item>
        <item name="android:textColor">@color/appPrimaryColor</item>
        <item name="sp_pinType">otp</item>
    </style>

</resources>