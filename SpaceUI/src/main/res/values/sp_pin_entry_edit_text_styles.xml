<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SPEditText.Masked" parent="SPTextField.Base">
        <item name="android:textAppearance">@style/h600_bold_text_field_phone</item>
        <item name="android:hint">XXXXXXXXX</item>
    </style>

    <style name="SPPinEntryEditText">
        <item name="android:digits">1234567890</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="SPPasswordView" parent="SPPinEntryEditText">
        <item name="pinType">password</item>
        <item name="disableCopyPaste">true</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="SPPinEntryOTPCode" parent="SPPinEntryEditText">
        <item name="android:background">@drawable/bg_otp_code_shape</item>
        <item name="paddingStart">@dimen/dimen_p_24</item>
        <item name="paddingEnd">@dimen/dimen_p_24</item>
        <item name="android:textColor">?attr/brand_primary</item>
        <item name="pinType">otp</item>
    </style>

</resources>