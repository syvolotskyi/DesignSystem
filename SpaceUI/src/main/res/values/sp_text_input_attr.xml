<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="sp_edittext_masked">
        <attr name="mask" format="string" />
    </declare-styleable>

    <declare-styleable name="sp_text_field_base_view">
        <attr name="android:text" format="string|reference" />
        <attr name="android:imeOptions" format="reference" />
        <attr name="android:hint" format="string|reference" />
        <attr name="android:textAppearance" format="reference" />
        <attr name="descriptionTextAppearance" format="reference" />
        <attr name="labelTextAppearance" format="reference" />
        <attr name="titleText" format="string|reference" />
        <attr name="descriptionText" format="string|reference" />
        <attr name="inputMandatory" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="sp_text_field_input">
        <attr name="canRemove" format="boolean" />
        <attr name="android:textAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="sp_text_field_dropdown">
        <attr name="android:textAppearance" format="reference" />
        <attr name="spInputTextLength" format="integer"/>
    </declare-styleable>

</resources>