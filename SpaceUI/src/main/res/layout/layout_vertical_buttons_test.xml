<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ge.space.ui.view.button.SPVerticalButton
        android:id="@+id/vbtnSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_p_8"
        android:layout_marginTop="@dimen/dimen_p_12"
        android:src="@drawable/ic_spbutton_arrow"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sp_viewStyle="@style/SPBaseView.SPBaseVerticalButton" />

    <ge.space.ui.view.button.SPVerticalButton
        android:id="@+id/vbtnSimpleDisabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_p_8"
        android:layout_marginTop="@dimen/dimen_p_12"
        android:enabled="false"
        android:src="@drawable/ic_spbutton_arrow"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/vbtnSimple"
        app:layout_constraintTop_toTopOf="parent"
        app:sp_viewStyle="@style/SPBaseView.SPBaseVerticalButton" />

    <ge.space.ui.view.button.SPVerticalButton
        android:id="@+id/vbtnLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_p_8"
        android:layout_marginTop="@dimen/dimen_p_12"
        android:src="@drawable/ic_spbutton_arrow"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vbtnSimple"
        app:sp_viewStyle="@style/SPBaseView.SPBaseVerticalButton.Large" />

    <ge.space.ui.view.button.SPVerticalButton
        android:id="@+id/vbtnLargeDisabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_p_8"
        android:layout_marginTop="@dimen/dimen_p_12"
        android:enabled="false"
        android:src="@drawable/ic_spbutton_arrow"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/vbtnLarge"
        app:layout_constraintTop_toBottomOf="@id/vbtnSimpleDisabled"
        app:sp_viewStyle="@style/SPBaseView.SPBaseVerticalButton.Large" />
</androidx.constraintlayout.widget.ConstraintLayout>