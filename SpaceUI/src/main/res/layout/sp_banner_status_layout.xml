<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/statusImage"
        android:layout_width="@dimen/dimen_p_120"
        android:layout_height="@dimen/dimen_p_120"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_status_success" />

    <TextView
        android:id="@+id/statusTitle"
        style="@style/StepDescriptionTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_p_30"
        android:layout_marginTop="@dimen/dimen_p_30"
        android:gravity="center"
        android:maxWidth="@dimen/dimen_p_250"
        android:textSize="@dimen/dimen_sp_16"
        app:layout_constraintTop_toBottomOf="@id/statusImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="დაიწყე ფულის დაგროვება შენი მიზნებისთვის" />

    <TextView
        android:id="@+id/statusSubtitle"
        style="@style/StepDescriptionSmallTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_p_30"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:layout_marginEnd="@dimen/dimen_p_30"
        android:gravity="center" />


</androidx.constraintlayout.widget.ConstraintLayout>