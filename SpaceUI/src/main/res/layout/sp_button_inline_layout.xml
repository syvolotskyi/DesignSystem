<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonContentWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/dimen_p_16"
        android:paddingVertical="@dimen/dimen_p_8">

        <ImageView
            android:id="@+id/buttonIcon"
            android:layout_width="@dimen/dimen_p_24"
            android:layout_height="@dimen/dimen_p_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_calendar_24_regular" />

        <TextView
            android:id="@+id/buttonLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_p_10"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/buttonIcon"
            app:layout_constraintTop_toTopOf="@id/buttonIcon"
            app:layout_constraintBottom_toBottomOf="@id/buttonIcon"
            tools:text="Title p" />

        <TextView
            android:id="@+id/buttonDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_p_10"
            android:layout_marginTop="@dimen/dimen_p_4"
            android:includeFontPadding="false"
            app:layout_constraintStart_toEndOf="@id/buttonIcon"
            app:layout_constraintTop_toBottomOf="@id/buttonLabel"
            tools:text="Title p" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>