<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/buttonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_p_8"
        android:layout_marginEnd="@dimen/dimen_p_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/h700_medium_caps_label_secondary"
        tools:text="Title" />

    <ge.space.ui.components.text_fields.password.SPMaskedEditText
        android:id="@+id/pinEntryEditText"
        style="@style/SPPinEntryEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_p_16"
        android:layout_marginBottom="@dimen/dimen_p_16"
        android:background="@null"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/dimen_p_8"
        android:layout_marginHorizontal="@dimen/dimen_p_8"
        android:gravity="center"
        android:focusable="true"
        android:maxLines="1"
        android:fontFamily="@font/myriad_geo_bold"
        android:imeOptions="actionNone"
        android:textColor="?attr/brand_primary"
        android:textSize="@dimen/dimen_sp_20" />
</LinearLayout>