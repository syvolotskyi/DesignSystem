<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/buttonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_p_8"
        android:layout_marginEnd="@dimen/dimen_p_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/h700_medium_caps_label_secondary"
        tools:text="Title" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_p_48"
        android:id="@+id/pinEntryContainer"
        android:layout_gravity="center"
        android:background="@drawable/bg_otp_code_shape"
        android:padding="@dimen/dimen_p_8">

        <ge.space.ui.components.text_fields.pin.SPOtpEditText
            android:id="@+id/pinEntryEditText"
            style="@style/SPPinEntryEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:focusable="true"
            android:fontFamily="@font/myriad_geo_bold"
            android:gravity="center"
            android:imeOptions="actionNone"
            android:maxLines="1"
            android:textColor="?attr/brand_primary"
            android:textSize="@dimen/dimen_sp_20" />

    </FrameLayout>

    <TextView
        android:id="@+id/buttonDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_p_8"
        android:layout_marginEnd="@dimen/dimen_p_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/h700_medium_caps_label_secondary"
        tools:text="Title" />
</LinearLayout>