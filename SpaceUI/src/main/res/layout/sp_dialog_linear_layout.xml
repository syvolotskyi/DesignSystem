<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lytWrapper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivDialogType"
        style="@style/SPBaseDialogInfoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sp_dialog_icon_margin_top"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:src="@drawable/ic_alert_circle_24_regular"
        tools:visibility="visible"/>

    <View
        android:layout_width="@dimen/sp_dialog_divider_width"
        android:layout_height="@dimen/sp_dialog_space_size"
        android:layout_marginTop="@dimen/sp_dialog_divider_margin_top" />

    <TextView
        android:id="@+id/tvDialogTitle"
        style="@style/mtavruliLargeLabelStyle.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sp_dialog_label_margin_top"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        tools:text="Title" />

    <TextView
        android:id="@+id/tvDialogLabel"
        style="@style/mtavruliMediumLabelStyle.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        tools:text="Label" />

    <View
        android:id="@+id/vSpace"
        android:layout_width="@dimen/sp_dialog_space_size"
        android:layout_height="@dimen/sp_dialog_space_size"
        android:layout_marginBottom="@dimen/sp_dialog_divider_margin_top" />

    <ge.space.ui.view.dialog.view.SPDialogBottomButtonLayout
        android:id="@+id/lytButtons"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:visibility="visible" />

</LinearLayout>