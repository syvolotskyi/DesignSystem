<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ge.space.ui.components.button.SPButton
        android:id="@+id/btnTest1"
        android:layout_width="@dimen/sp_button_width"
        android:layout_height="@dimen/sp_button_height"
        android:layout_marginStart="@dimen/dimen_p_15"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sp_viewStyle="@style/SPAccentButtonView"/>

    <ge.space.ui.components.button.SPButton
        android:id="@+id/btnTest2"
        android:layout_width="@dimen/sp_button_width"
        android:layout_height="@dimen/sp_button_height"
        android:layout_marginStart="@dimen/dimen_p_15"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTest1"
        app:sp_viewStyle="@style/SPWhiteButtonView" />

    <ge.space.ui.components.button.SPButton
        android:id="@+id/btnTest3"
        android:layout_width="@dimen/sp_button_width"
        android:layout_height="@dimen/sp_button_height"
        android:layout_marginStart="@dimen/dimen_p_15"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTest2"
        app:sp_viewStyle="@style/SPDarkButtonView" />

    <ge.space.ui.components.button.SPButton
        android:id="@+id/btnTest4"
        android:layout_width="@dimen/sp_button_width"
        android:layout_height="@dimen/sp_button_height"
        android:layout_marginStart="@dimen/dimen_p_15"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:text="Button label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTest3"
        app:sp_viewStyle="@style/SPTransparentButtonView" />

    <ge.space.ui.components.button.SPButton
        android:id="@+id/btnTestLeft1"
        android:layout_width="@dimen/sp_button_width"
        android:layout_height="@dimen/sp_button_height"
        android:layout_marginStart="@dimen/dimen_p_15"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@id/btnTest1"
        app:layout_constraintTop_toTopOf="parent"
        app:sp_viewStyle="@style/SPAccentButtonViewWithLeftArrow" />

    <ge.space.ui.components.button.SPButton
        android:id="@+id/btnTestLeft2"
        android:layout_width="@dimen/sp_button_width"
        android:layout_height="@dimen/sp_button_height"
        android:layout_marginStart="@dimen/dimen_p_15"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@id/btnTest2"
        app:layout_constraintTop_toBottomOf="@id/btnTest1"
        app:sp_viewStyle="@style/SPWhiteButtonViewWithLeftArrow" />

    <ge.space.ui.components.button.SPButton
        android:id="@+id/btnTestLeft3"
        android:layout_width="@dimen/sp_button_width"
        android:layout_height="@dimen/sp_button_height"
        android:layout_marginStart="@dimen/dimen_p_15"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@id/btnTest3"
        app:layout_constraintTop_toBottomOf="@id/btnTest2"
        app:sp_viewStyle="@style/SPDarkButtonViewWithLeftArrow" />

    <ge.space.ui.components.button.SPButton
        android:id="@+id/btnTestLeft4"
        android:layout_width="@dimen/sp_button_width"
        android:layout_height="@dimen/sp_button_height"
        android:layout_marginStart="@dimen/dimen_p_15"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:text="Button label"
        app:layout_constraintStart_toEndOf="@id/btnTest4"
        app:layout_constraintTop_toBottomOf="@id/btnTest3"
        app:sp_viewStyle="@style/SPTransparentButtonViewWithLeftArrow" />

    <ge.space.ui.components.button.SPButton
        android:id="@+id/btnTestRight1"
        android:layout_width="@dimen/sp_button_width"
        android:layout_height="@dimen/sp_button_height"
        android:layout_marginStart="@dimen/dimen_p_15"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:paddingStart="@dimen/dimen_p_10"
        android:paddingEnd="@dimen/dimen_p_10"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@id/btnTestLeft1"
        app:layout_constraintTop_toTopOf="parent"
        app:sp_viewStyle="@style/SPAccentButtonViewWithRightArrow" />

    <ge.space.ui.components.button.SPButton
        android:id="@+id/btnTestRight2"
        android:layout_width="@dimen/sp_button_width"
        android:layout_height="@dimen/sp_button_height"
        android:layout_marginStart="@dimen/dimen_p_15"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@id/btnTestLeft2"
        app:layout_constraintTop_toBottomOf="@id/btnTest1"
        app:sp_viewStyle="@style/SPWhiteButtonViewWithRightArrow" />

    <ge.space.ui.components.button.SPButton
        android:id="@+id/btnTestRight3"
        android:layout_width="@dimen/sp_button_width"
        android:layout_height="@dimen/sp_button_height"
        android:layout_marginStart="@dimen/dimen_p_15"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@id/btnTestLeft3"
        app:layout_constraintTop_toBottomOf="@id/btnTest2"
        app:sp_viewStyle="@style/SPDarkButtonViewWithRightArrow" />

    <ge.space.ui.components.button.SPButton
        android:id="@+id/btnTestRight4"
        android:layout_width="@dimen/sp_button_width"
        android:layout_height="@dimen/sp_button_height"
        android:layout_marginStart="@dimen/dimen_p_15"
        android:layout_marginTop="@dimen/dimen_p_15"
        android:text="Button label"
        app:layout_constraintStart_toEndOf="@id/btnTestLeft4"
        app:layout_constraintTop_toBottomOf="@id/btnTest3"
        app:sp_viewStyle="@style/SPTransparentButtonViewWithRightArrow" />

</androidx.constraintlayout.widget.ConstraintLayout>