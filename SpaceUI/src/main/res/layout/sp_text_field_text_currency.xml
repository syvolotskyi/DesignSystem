<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sp_text_field_height">

    <EditText
        android:id="@+id/etInputField"
        style="@style/SPTextField.Number"
        android:layout_width="0dp"
        android:layout_height="@dimen/sp_text_field_height"
        android:gravity="start|center_vertical"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:paddingStart="@dimen/sp_text_field_horizontal_text_padding"
        android:paddingTop="@dimen/sp_text_field_vertical_text_padding"
        android:paddingBottom="@dimen/sp_text_field_bottom_text_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvCurrency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCurrency"
        style="@style/SPTextField.TextCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/sp_text_field_currency_margin"
        android:layout_marginVertical="@dimen/sp_text_field_currency_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$" />
</androidx.constraintlayout.widget.ConstraintLayout>