<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
            <corners android:radius="@dimen/sp_switch_radius" />
            <solid android:color="@color/white"/>
            <size android:width="@dimen/sp_switch_thumb_width" android:height="@dimen/sp_switch_thumb_width"  />
            <stroke android:width="@dimen/sp_switch_thumb_stroke_width" android:color="@color/transparent" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="oval" android:useLevel="false" android:visible="true">
            <solid android:color="@color/light_greyscale_gray_3"/>
            <size android:width="@dimen/sp_switch_thumb_width" android:height="@dimen/sp_switch_thumb_width" />
            <stroke android:width="@dimen/sp_switch_thumb_stroke_width"  android:color="@color/transparent" />
        </shape>
    </item>
</selector>