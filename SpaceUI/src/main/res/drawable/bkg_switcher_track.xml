<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/sp_switch_radius" />
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/sp_switch_track_stroke_width" android:color="@color/light_greyscale_gray_4" />
            <size android:height="@dimen/sp_switch_track_height" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/sp_switch_radius" />
            <solid android:color="@color/appPrimaryColor" />
            <stroke android:width="@dimen/sp_switch_track_stroke_width" android:color="@color/appPrimaryColor" />
            <size android:height="@dimen/sp_switch_track_height" />
        </shape>
    </item>
</selector>