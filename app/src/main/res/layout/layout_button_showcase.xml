<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ge.space.ui.components.button.ButtonIconic
                android:layout_width="@dimen/dimen_p_45"
                android:layout_height="@dimen/dimen_p_45" />

            <ge.space.ui.components.button.ButtonIconic
                android:layout_width="@dimen/dimen_p_45"
                android:layout_height="@dimen/dimen_p_45"
                android:layout_marginTop="@dimen/dimen_p_48"
                app:style="@style/ButtonIconic.Special" />
        </LinearLayout>

    </ScrollView>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/textInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_p_10"
        android:background="@color/light_greyscale_gray_5"
        android:hint="Input button text"
        android:inputType="textVisiblePassword"
        android:padding="@dimen/dimen_p_10"
        android:textSize="@dimen/dimen_sp_16" />

</LinearLayout>